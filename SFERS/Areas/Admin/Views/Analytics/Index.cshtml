@{
    ViewData["Title"] = "Data Governance";
}
@model SFERS.Models.ViewModel.AdminAnalyticsViewModel

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fs-6">Report Configurations</h5>
                <button class="btn btn-sm btn-light py-0">+</button>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Monthly Usage (PDF)
                    <div>
                        <i class="fas fa-edit text-primary cursor-pointer"></i>
                        <i class="fas fa-trash text-danger ms-2 cursor-pointer"></i>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Damaged Equip. List
                    <div>
                        <i class="fas fa-edit text-primary cursor-pointer"></i>
                        <i class="fas fa-trash text-danger ms-2 cursor-pointer"></i>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Manual Log Entry (Data Correction)</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="InsertLog" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Reservation</label>
                        <select class="form-select" asp-for="SelectedReservation">
                            <option value="">-- Select a reservation --</option>
                            @foreach (var reservation in Model.ApprovedReservations)
                            {
                                <option value="@reservation.Id">
                                    Reservation #@reservation.Id - @(reservation.Room != null ? reservation.Room.Name : "No             Room") on @reservation.Date.ToString("yyyy-MM-dd")
                                </option>
                            }
                        </select>
                        <span asp-validation-for="SelectedReservation" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date</label>
                        <input type="date" asp-for="SelectedDate" class="form-control">
                        <span asp-validation-for="SelectedDate" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-warning text-dark">
                            <i class="fas fa-plus-circle me-1"></i> Inject Historical Record
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">Raw Reservation Logs</div>
    <div class="table-responsive">
        <table class="table table-sm table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th>Log ID</th>
                    <th>Room</th>
                    <th>Timestamp</th>
                    <th>Duration</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.ReservationLogs)
                {
                    <tr>
                        <td>@log.Id</td>
                        <td>@(log.Room)</td>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(log.Duration)</td>
                        <form method="post" asp-action="DeleteLog" asp-controller="Analytics" asp-area="Admin">
                            <input type="hidden" name="id" value="@log.Id" />
                            <td><button class="btn btn-sm btn-danger py-0">Delete Log</button></td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}