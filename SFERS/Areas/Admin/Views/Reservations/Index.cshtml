@model List<SFERS.Models.ViewModel.AdminReservationViewModel>

@{
    ViewData["Title"] = "Manage Reservations";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-3">
            <i class="fas fa-calendar-check me-2"></i>
            Manage Reservations
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Room</th>
                        <th>Date</th>
                        <th>Time Slot</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.RoomName
                                <div class="d-flex flex-wrap gap-1 mb-3">
                                    @foreach (var equipment in item.EquipmentNames ?? Enumerable.Empty<string>())
                                    {
                                        <span class="badge bg-secondary">@equipment</span>
                                    }
                                </div>
                            </td>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>@item.TimeSlot</td>
                            <td>@item.Purpose</td>
                            <td>
                                @if (item.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (item.Status == "Declined")
                                {
                                    <span class="badge bg-danger">Declined</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Status == "Pending")
                                {
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-success me-1">
                                            <i class="fas fa-check"></i> Approve
                                        </button>
                                    </form>

                                    <form asp-action="Decline" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-times"></i> Decline
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-secondary" disabled>
                                        Processed
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>