@model SFERS.Models.ViewModel.AdminRoomViewModel
@{
    ViewData["Title"] = "Admin - Manage Rooms";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-cogs me-2"></i>Manage Rooms</h2>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createRoomModal">
        <i class="fas fa-plus me-2"></i>Add New Room
    </button>
</div>

<div class="row g-4">
    @foreach (var room in Model.Rooms)
    {
        <div class="col-md-4">
            <div class="card h-100 border-primary">
                <div class="card-header bg-light d-flex justify-content-between">
                    <h5 class="fw-bold mb-0">@room.Name</h5>
                    <span class="badge bg-primary">Cap: @room.Capacity</span>
                </div>
                <div class="card-body">
                    <p class="text-muted small">ID: @room.Id</p>
                    <div class="d-flex flex-wrap gap-1 mb-3">
                        @foreach (var item in room.Equipment ?? Enumerable.Empty<string>())
                        {
                            <span class="badge bg-secondary">@item</span>
                        }
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" checked="@room.IsAvailable">
                        <label class="form-check-label small">Available for Booking</label>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 d-flex gap-2 pb-3">
                    <button class="btn btn-sm btn-outline-primary flex-grow-1" data-bs-toggle="modal"
                        data-bs-target="#editRoomModal_@room.Id">
                        <i class="fas fa-edit"></i> Edit
                    </button>
                    <form method="post" asp-area="Admin" asp-controller="Rooms" asp-action="Delete" asp-route-id="@room.Id"
                        onsubmit="return confirm('Delete this room?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="editRoomModal_@room.Id" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-area="Admin" asp-controller="Rooms" asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <div class="modal-header">
                            <h5 class="modal-title">Edit Room</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <input type="hidden" name="editRoomId" value="@room.Id" />
                        <div class="modal-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label class="form-label">Room Name</label>
                                <input type="text" name="editRoomName" class="form-control" value="@room.Name" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Capacity</label>
                                <input type="number" name="editRoomCapacity" class="form-control" value="@room.Capacity"
                                    required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-success" value="Edit Room" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="createRoomModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-area="Admin" asp-controller="Rooms" asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add New Room</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label">Room Name</label>
                        <input asp-for="NewRoomName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Capacity</label>
                        <input asp-for="NewRoomCapacity" class="form-control" type="number" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Create Room" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}