@model List<SFERS.Models.ViewModel.UserProfileViewModel>
@{
    ViewData["Title"] = "User Administration";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-4">
        <h2><i class="fas fa-users-cog me-2"></i>User Management</h2>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th class="text-end">Controls</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary rounded-circle me-2" style="width:32px;height:32px;"></div>
                                    <div>
                                        <div class="fw-bold">@user.FullName</div>
                                        <div class="small text-muted">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <form method="post" asp-area="admin" asp-controller="Users" asp-action="UpdateRole" asp-route-id="@user.Id">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="newRole" class="form-select form-select-sm" style="width: 120px;" onchange="this.form.submit()">
                                        <option selected="@(user.Role == "User")">User</option>
                                        <option selected="@(user.Role == "Admin")">Admin</option>
                                    </select>
                                </form>
                            </td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-link text-warning" title="Reset Password"><i
                                        class="fas fa-key"></i></button>
                                <button class="btn btn-sm btn-link text-danger" title="Ban User"><i
                                        class="fas fa-ban"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>