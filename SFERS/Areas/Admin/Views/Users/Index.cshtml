@model List<SFERS.Models.UserProfileViewModel>
@{
    ViewData["Title"] = "User Administration";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-4">
        <h2><i class="fas fa-users-cog me-2"></i>User Management</h2>
        <button class="btn btn-info text-white"><i class="fas fa-user-plus"></i> Create Admin User</button>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th class="text-end">Controls</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-secondary rounded-circle me-2" style="width:32px;height:32px;"></div>
                                    <div>
                                        <div class="fw-bold">@user.FullName</div>
                                        <div class="small text-muted">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <select class="form-select form-select-sm" style="width: 120px;">
                                    <option selected="@(user.Role == "Student")">Student</option>
                                    <option selected="@(user.Role == "Faculty")">Faculty</option>
                                    <option selected="@(user.Role == "Admin")">Admin</option>
                                </select>
                            </td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>Yesterday</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-link text-warning" title="Reset Password"><i class="fas fa-key"></i></button>
                                <button class="btn btn-sm btn-link text-danger" title="Ban User"><i class="fas fa-ban"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>