@model SFERS.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h3 class="text-center mb-4">Create Account</h3>

                @* Enhanced error display with better styling *@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Please fix the following errors:</strong>
                        @Html.ValidationSummary(false, "", new { @class = "mb-0 mt-2" })
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control @(ViewData.ModelState["FullName"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="John Doe" />
                        <span asp-validation-for="FullName" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="name@school.edu" />
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")" type="password" placeholder="Minimum 6 characters" />
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                        @* Added password requirements hint *@
                        <small class="form-text text-muted">Must be at least 6 characters long</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control @(ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0 ? "is-invalid" : "")" type="password" placeholder="Re-enter your password" />
                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Create Account</button>
                    </div>

                    <div class="text-center mt-3">
                        <p class="small">Already have an account? <a asp-action="Login" class="text-decoration-none fw-semibold">Login here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


