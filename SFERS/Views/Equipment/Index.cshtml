@model List<SFERS.Models.EquipmentViewModel>

@{
    ViewData["Title"] = "Equipment Inventory";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-tools me-2"></i>Equipment Inventory</h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item"><a class="nav-link active" href="#">All Items</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Projectors</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Item Name</th>
                        <th>Category</th>
                        <th>Assigned Location</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td><span class="badge bg-secondary">@item.Category</span></td>
                            <td>@item.AssignedRoom</td>
                            <td>
                                @if (item.Status == "Available")
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else if (item.Status == "In Use")
                                {

                                    <span class="badge bg-danger">In Use</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editEquipmentModal">
                                    Edit
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="editEquipmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Equipment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Item Name</label>
                        <input type="text" class="form-control" value="Epson Pro Projector">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select class="form-select">
                            <option selected>Projector</option>
                            <option>Audio</option>
                            <option>Laptop</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select">
                            <option>Available</option>
                            <option selected>In Use</option>
                            <option>Maintenance</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Save Changes</button>
            </div>
        </div>
    </div>
</div>