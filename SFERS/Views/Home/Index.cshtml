@{
    ViewData["Title"] = "Welcome";
}

@* Enhanced home page with school-themed background and improved visual design *@
<style>
    .hero-section {
        background: linear-gradient(135deg, rgba(44, 62, 80, 0.95) 0%, rgba(52, 152, 219, 0.9) 100%), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 600"><rect fill="%232c3e50" width="1200" height="600"/><g fill="%233498db" fill-opacity="0.1"><circle cx="150" cy="100" r="80"/><circle cx="900" cy="400" r="100"/><circle cx="400" cy="500" r="60"/><circle cx="1000" cy="150" r="70"/><rect x="200" y="300" width="100" height="100" rx="10"/><rect x="700" y="50" width="80" height="80" rx="10"/></g></svg>') center/cover;
        border-radius: 20px;
        color: white;
        padding: 5rem 2rem;
        margin: 2rem 0;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M20,50 Q30,30 40,50 T60,50 T80,50" fill="none" stroke="%23ffffff" stroke-width="0.5" opacity="0.1"/></svg>');
            opacity: 0.3;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .hero-description {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }

    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #e9ecef;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

    .icon-square {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
    }

    .cta-button {
        padding: 0.875rem 2.5rem;
        font-size: 1.125rem;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .cta-button:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
</style>

<div class="hero-section">
    <div class="hero-content text-center">
        <h1 class="hero-title">School Facility Reservation System</h1>
        <div class="col-lg-8 mx-auto">
            <p class="hero-description">Effortlessly book classrooms, laboratories, and equipment for your academic needs. Real-time availability, instant approval tracking, and smart scheduling.</p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a asp-controller="Account" asp-action="Login" class="btn btn-light cta-button px-5">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light cta-button px-5">
                    <i class="fas fa-user-plus me-2"></i>Register
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    <div class="col">
        <div class="feature-card">
            <div class="d-flex align-items-start">
                <div class="icon-square flex-shrink-0 me-3">
                    <i class="fas fa-calendar-check fa-2x"></i>
                </div>
                <div>
                    <h3 class="h4 mb-3">Smart Booking</h3>
                    <p class="text-muted">View real-time availability of rooms and equipment to prevent conflicts.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="feature-card">
            <div class="d-flex align-items-start">
                <div class="icon-square flex-shrink-0 me-3">
                    <i class="fas fa-chart-line fa-2x"></i>
                </div>
                <div>
                    <h3 class="h4 mb-3">Track Status</h3>
                    <p class="text-muted">Know exactly when your reservation is approved or if it needs changes.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="feature-card">
            <div class="d-flex align-items-start">
                <div class="icon-square flex-shrink-0 me-3">
                    <i class="fas fa-mobile-alt fa-2x"></i>
                </div>
                <div>
                    <h3 class="h4 mb-3">Mobile Ready</h3>
                    <p class="text-muted">Access the system from anywhere—your phone, tablet, or laptop.</p>
                </div>
            </div>
        </div>
    </div>
</div>


