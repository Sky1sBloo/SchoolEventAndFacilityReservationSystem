@model SFERS.Models.ViewModel.ReservationCreateViewModel
@{
    ViewData["Title"] = "Book a Room";
    var rooms = ViewData["Rooms"] as List<SFERS.Models.Entities.Room> ?? new List<SFERS.Models.Entities.Room>();
    var equipments = ViewData["Equipments"] as List<SFERS.Models.Entities.Equipment> ?? new List<SFERS.Models.Entities.Equipment>();
}   

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">New Reservation</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Select Room</label>
                                <select class="form-select" asp-for="RoomId" required>
                                    <option value="">Choose a room...</option>
                                    @foreach (var r in rooms)
                                    {
                                        <option value="@r.Id" selected="@(Model.RoomId == r.Id ? "selected" : null)">@r.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="RoomId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Date</label>
                                <input type="date" class="form-control" asp-for="Date" required />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Time</label>
                                <input type="time" class="form-control" asp-for="StartTime" required />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Time</label>
                                <input type="time" class="form-control" asp-for="EndTime" required />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Equipment Needed (Optional)</label>
                            @if (equipments.Any())
                            {
                                <div class="row">
                                    @foreach (var e in equipments)
                                    {
                                        <div class="col-6 col-md-4">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="EquipmentIds" value="@e.Id" id="equip_@e.Id"
                                                       @(Model.EquipmentIds != null && Model.EquipmentIds.Contains(e.Id) ? "checked" : "") />
                                                <label class="form-check-label" for="equip_@e.Id">@e.Name</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-muted small">No available equipment.</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Purpose of Reservation</label>
                            <textarea class="form-control" rows="3" asp-for="Purpose" placeholder="e.g., Class presentation for Biology 101" required></textarea>
                            <span asp-validation-for="Purpose" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Submit Request</button>
                            <a asp-action="Index" class="btn btn-link text-muted">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
