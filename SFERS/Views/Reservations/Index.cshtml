@model List<SFERS.Models.ReservationViewModel>
@{
    ViewData["Title"] = "My Reservations";
}

<h2>My Reservations</h2>

<div class="mb-3">
    <a asp-action="Calendar" class="btn btn-outline-info me-2">View Calendar</a>
    <a asp-action="Create" class="btn btn-primary">Book New Room</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-start border-4 @(item.Status == "Approved" ? "border-success" : item.Status == "Ongoing" ? "border-primary" : "border-warning")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title mb-0">@item.RoomName</h5>
                        <span class="badge @(item.Status == "Approved" ? "bg-success" : item.Status == "Ongoing" ? "bg-primary" : "bg-warning text-dark")">@item.Status</span>
                    </div>
                    <p class="card-text text-muted">
                        <i class="fas fa-calendar me-2"></i>@item.Date.ToShortDateString()<br>
                        <i class="fas fa-clock me-2"></i>@item.TimeSlot
                    </p>
                    <p class="small"><strong>Purpose:</strong> @item.Purpose</p>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <button class="btn btn-sm btn-outline-dark w-100">View Details</button>
                </div>
            </div>
        </div>
    }
</div>

