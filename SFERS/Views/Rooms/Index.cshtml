@model List<SFERS.Models.ViewModel.RoomViewModel>

@{
    ViewData["Title"] = "Rooms";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-door-open me-2"></i>School Rooms</h2>
    <span class="badge bg-success">@Model.Count() Rooms Configured</span>
</div>

<div class="row g-4">
    @* --- START OF LOOP --- *@
    @foreach (var room in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title fw-bold">@room.Name</h5>
                        <span class="badge bg-primary rounded-pill">Capacity: @room.Capacity</span>
                    </div>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Equipment Included:</p>
                    <div class="d-flex flex-wrap gap-1 mb-3">
                        @* Nested loop for equipment tags *@
                        @foreach (var item in room?.Equipment ?? Enumerable.Empty<string>())
                        {
                            <span class="badge bg-light text-dark border">@item</span>
                        }
                    </div>

                    @* Availability Logic *@
                    @if (room != null && room.IsAvailable)
                    {
                        <div class="alert alert-success py-2 px-3 small mb-0">
                            <i class="fas fa-check-circle me-1"></i> Available Now
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger py-2 px-3 small mb-0">
                            <i class="fas fa-times-circle me-1"></i> In Use
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent border-0 pb-4">
                    <button class="btn btn-outline-dark w-100" 
                            data-bs-toggle="modal" 
                            data-bs-target="#roomDetailModal"
                            data-room-id="@room.Id"
                            data-room-name="@room.Name"
                            data-room-capacity="@room.Capacity"
                            data-room-equipment="@string.Join(", ", room.Equipment ?? new List<string>())">
                        View Details
                    </button>
                </div>
            </div>
        </div>
    }
    @* --- END OF LOOP (This is the specific brace likely causing your error) --- *@
</div>

<div class="modal fade" id="roomDetailModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span id="modalRoomName">Room</span> - Reservations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Purpose</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="reservationsTableBody">
                        <tr><td colspan="4" class="text-center text-muted">Loading reservations...</td></tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <a id="reserveRoomLink" href="#" class="btn btn-primary">New Reservation</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('roomDetailModal');
            modal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const roomId = button.getAttribute('data-room-id');
                const roomName = button.getAttribute('data-room-name');
                
                document.getElementById('modalRoomName').textContent = roomName;
                document.getElementById('reserveRoomLink').href = `/Reservations/Create?roomId=${roomId}`;
                
                // Fetch reservations for this room
                fetch(`/api/rooms/${roomId}/reservations`)
                    .then(response => response.json())
                    .then(reservations => {
                        const tbody = document.getElementById('reservationsTableBody');
                        if (reservations.length === 0) {
                            tbody.innerHTML = '<tr><td colspan="4" class="text-center text-muted">No reservations</td></tr>';
                            return;
                        }
                        
                        tbody.innerHTML = reservations.map(r => `
                            <tr>
                                <td>${new Date(r.date).toLocaleDateString()}</td>
                                <td>${r.startTime} - ${r.endTime}</td>
                                <td>${r.purpose}</td>
                                <td>
                                    <span class="badge bg-${r.status === 'Approved' ? 'success' : r.status === 'Declined' ? 'danger' : 'warning'}">
                                        ${r.status}
                                    </span>
                                </td>
                            </tr>
                        `).join('');
                    })
                    .catch(error => {
                        document.getElementById('reservationsTableBody').innerHTML = 
                            '<tr><td colspan="4" class="text-center text-danger">Failed to load reservations</td></tr>';
                        console.error('Error:', error);
                    });
            });
        });
    </script>
}


