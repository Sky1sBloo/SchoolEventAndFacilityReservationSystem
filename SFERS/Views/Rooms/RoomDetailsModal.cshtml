@model SFERS.Models.ViewModel.RoomDetailsViewModel
 
<div class="modal fade" id="roomDetailModal_@Model.Room.Id" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Room.Name - Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <strong>Capacity:</strong> @Model.Room.Capacity
                </div>

                <div class="mb-3">
                    <strong>Equipment:</strong>
                    <div class="d-flex flex-wrap gap-1 mt-2">
                        @foreach (var eq in Model.Room.Equipment ?? Enumerable.Empty<string>())
                        {
                            <span class="badge bg-light text-dark border">@eq</span>
                        }
                        @if (Model.Room.Equipment == null || !Model.Room.Equipment.Any())
                        {
                            <span class="text-muted small">No equipment assigned.</span>
                        }
                    </div>
                </div>

                <hr />

                <h6>Current Reservation</h6>
                @if (Model.CurrentReservation != null)
                {
                    <div class="card mb-3">
                        <div class="card-body d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-bold">@Model.CurrentReservation.RoomName</div>
                                <div class="small text-muted">@Model.CurrentReservation.Date.ToShortDateString() &nbsp; | &nbsp; @Model.CurrentReservation.TimeSlot</div>
                                <div class="small mt-2">@Model.CurrentReservation.Purpose</div>
                                @if (!string.IsNullOrEmpty(Model.CurrentReservation.EquipmentRequested))
                                {
                                    <div class="mt-2 small text-muted">Equipment: @Model.CurrentReservation.EquipmentRequested</div>
                                }
                            </div>
                            <div class="text-end">
                                <span class="badge @(Model.CurrentReservation.Status == "Approved" ? "bg-success" : Model.CurrentReservation.Status == "Declined" ? "bg-danger" : "bg-warning text-dark")">
                                    @Model.CurrentReservation.Status
                                </span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-success">No active reservation right now — room is available.</div>
                }

                <hr />

                <h6>Future Reservations (Today &amp; onwards)</h6>
                @if (Model.UpcomingReservations != null && Model.UpcomingReservations.Any())
                {
                    <div class="list-group mt-2">
                        @foreach (var res in Model.UpcomingReservations)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">@res.Date.ToShortDateString() &nbsp; <small class="text-muted">| @res.TimeSlot</small></div>
                                    <div class="small text-muted">@res.Purpose</div>
                                    @if (!string.IsNullOrEmpty(res.EquipmentRequested))
                                    {
                                        <div class="mt-2">
                                            @foreach (var e in (res.EquipmentRequested ?? "").Split(',').Select(s => s.Trim()))
                                            {
                                                if (!string.IsNullOrEmpty(e))
                                                {
                                                    <span class="badge bg-secondary me-1">@e</span>
                                                }
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="text-end">
                                    <span class="badge @(res.Status == "Approved" ? "bg-success" : res.Status == "Declined" ? "bg-danger" : "bg-warning text-dark")">@res.Status</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary mt-2 mb-0">No upcoming reservations for this room.</div>
                }
            </div>
            <div class="modal-footer">
                <a asp-controller="Reservations" asp-action="Create" asp-route-roomId="@Model.Room.Id" class="btn btn-primary">Reserve Now</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
