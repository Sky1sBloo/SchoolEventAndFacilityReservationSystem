<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School Facility System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #2c3e50;
            --accent-color: #3498db;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar Styling */
        .navbar {
            background-color: var(--primary-color);
        }

        .nav-link {
            color: rgba(255,255,255,0.8) !important;
            transition: color 0.2s;
        }

            .nav-link:hover, .nav-link.active {
                color: #fff !important;
                font-weight: 600;
            }

        /* Footer Styling */
        footer {
            background-color: var(--primary-color);
            color: rgba(255,255,255,0.6);
            margin-top: auto;
        }

        /* General Card Styling */
        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            border-radius: 12px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>SchoolRes
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservations" asp-action="Index">Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservations" asp-action="Index">Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rooms" asp-action="Index">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Equipment" asp-action="Index">Equipment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Analytics" asp-action="Index">Analytics</a>
                        </li>

                        <li class="nav-item dropdown ms-lg-3 border-start border-secondary ps-lg-3">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-shield me-1"></i> Admin Panel
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li>
                                    <h6 class="dropdown-header">Management</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rooms" asp-area="Admin" asp-action="Index">
                                        <i class="fas fa-door-open me-2 text-primary"></i>Manage Rooms
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Equipment" asp-area="Admin" asp-action="Index">
                                        <i class="fas fa-tools me-2 text-warning"></i>Manage Equipment
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Users" asp-area="Admin" asp-action="Index">
                                        <i class="fas fa-users me-2 text-success"></i>Manage Users
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="AdminReservations" asp-action="Index">
                                        <i class="fas fa-calendar-check me-2 text-info"></i>
                                        Manage Reservations
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <h6 class="dropdown-header">Insights</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Analytics" asp-area="Admin" asp-action="Index">
                                        <i class="fas fa-chart-line me-2 text-info"></i>View Analytics
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">
                                <i class="fas fa-user-circle me-1"></i> Profile
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - School Facility Reservation System - <a href="#" class="text-decoration-none text-white-50">Privacy Policy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

